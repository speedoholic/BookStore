# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'BookStore' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for BookStore

  # For web service calls
  pod 'Alamofire', '~> 4.5'
  pod 'AlamofireImage', '~> 3.3'
  # For mapping the JSON response into Realm Objects
  pod 'ObjectMapper', '~> 3.3.0'
  # For maintaining a local database
  pod 'RealmSwift'
  # To follow coding standards
  pod 'SwiftLint'
  # To generate references to static resources
  pod 'R.swift'
  # To make text field visible while keyboard is shown
  pod 'IQKeyboardManager'
  # To display custom indicators (loading)
  pod 'PKHUD', '~> 5.0'

  target 'BookStoreTests' do
    inherit! :search_paths
    # Pods for testing
    
    pod 'Alamofire', '~> 4.5'
    pod 'AlamofireImage', '~> 3.3'
    # For mapping the JSON response into Realm Objects
    pod 'ObjectMapper', '~> 3.3.0'
    # For maintaining a local database
    pod 'RealmSwift'
    # To follow coding standards
    pod 'SwiftLint'
    # To generate references to static resources
    pod 'R.swift'
    # To make text field visible while keyboard is shown
    pod 'IQKeyboardManager'
    # To display custom indicators (loading)
    pod 'PKHUD', '~> 5.0'
    
  end

  target 'BookStoreUITests' do
    inherit! :search_paths
    
    # Pods for testing
    pod 'Alamofire', '~> 4.5'
    pod 'AlamofireImage', '~> 3.3'
    # For mapping the JSON response into Realm Objects
    pod 'ObjectMapper', '~> 3.3.0'
    # For maintaining a local database
    pod 'RealmSwift'
    # To follow coding standards
    pod 'SwiftLint'
    # To generate references to static resources
    pod 'R.swift'
    # To make text field visible while keyboard is shown
    pod 'IQKeyboardManager'
    # To display custom indicators (loading)
    pod 'PKHUD', '~> 5.0'
    
  end

end
